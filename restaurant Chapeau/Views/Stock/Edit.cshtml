@model restaurant_Chapeau.Models.MenuItem

@{
    ViewBag.Title = "Edit Stock";
}

<div class="container mt-5">
    <h2 class="mb-4">Edit Stock</h2>

    <form method="post">
        <input type="hidden" name="MenuItemID" value="@Model.MenuItemID" />

        <div class="mb-3">
            <label class="form-label">Item Name:</label>
            <input type="text" class="form-control" value="@Model.Name" disabled />
        </div>

        <div class="mb-3">
            <label class="form-label">Quantity Available:</label>
            <input type="number" name="QuantityAvailable" class="form-control" value="@Model.QuantityAvailable" />
        </div>

        <button type="submit" class="btn btn-primary">Save</button>
        <a href="/Stock" class="btn btn-secondary ms-2">Cancel</a>
    </form>
</div>
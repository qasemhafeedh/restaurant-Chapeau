@model restaurant_Chapeau.Models.MenuItem
<div class="container mt-5 pt-5">
<h2>Edit Stock for @Model.Name</h2>

<form method="post">
    <input type="hidden" name="MenuItemID" value="@Model.MenuItemID" />

    <div class="mb-3">
        <label>Quantity Available</label>
        <input type="number" name="QuantityAvailable" value="@Model.QuantityAvailable" class="form-control" />
    </div>

    <button type="submit" class="btn btn-success">Save</button>
    <a href="/Stock/ShowStock" class="btn btn-secondary">Cancel</a>
</form></div>
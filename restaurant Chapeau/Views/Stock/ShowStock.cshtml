@model List<restaurant_Chapeau.Models.MenuItem>  // This line tells the page it will receive a list of MenuItem objects from the controller
<div class="container mt-5 pt-5">
<h2>Stock List</h2>

<!-- This is the start of the table to display stock information -->
<table class="table table-bordered">
    <!-- Bootstrap classes for a nice-looking table with borders -->
    <thead>
        <!-- Table header (column titles) -->
        <tr>
            <th>Name</th>
            <th>Category</th> 
            <th>Quantity Available</th> 
            <th>Action</th> 
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model) // Loop through each item in the stock list
        {
            // If the item's quantity is less than 10 then highlight the row with a red background
            var rowColor = item.QuantityAvailable <= 10 ? "style='background-color: #f8d7da'" : "";

            // Display one table row for this item
            <tr @Html.Raw(rowColor)>
                <!-- Apply red background if stock is low -->
                <td>@item.Name</td> 
                <td>@item.Category</td> 
                <td>@item.QuantityAvailable</td> 
                <td>
                    <!-- Edit button: sends user to the Edit page with the item ID -->
                    <a class="btn btn-primary btn-sm" href="/Stock/Edit/@item.MenuItemID">Edit</a>
3                </td>
            </tr>
        }
    </tbody>
    </table></div>

@model List<restaurant_Chapeau.Models.MenuItem>
<div class="container mt-5 pt-5">
<h2>Manage Menu</h2>

<!-- Add New Item Button -->
<a href="/Menu/Add" class="btn btn-success mb-3">Add New Menu Item</a>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Name</th>
            <th>Price (€)</th>
            <th>Category</th>
            <th>Menu Type</th>
            <th>Status</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Price</td>
                <td>@item.Category</td>
                <td>@item.MenuType</td>
                <td>@(item.IsActive ? "Active" : "Inactive")</td>
                <td>
                    <a href="/Menu/Edit/@item.MenuItemID" class="btn btn-primary btn-sm">Edit</a>
                    <a href="/Menu/ToggleActive/@item.MenuItemID" class="btn btn-warning btn-sm">
                        @(item.IsActive ? "Deactivate" : "Activate")
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table> </div>
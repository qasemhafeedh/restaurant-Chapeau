@model restaurant_Chapeau.Models.MenuItem
<div class="container mt-5 pt-5">
@{
    ViewData["Title"] = "Add Menu Item";
}

<h2 class="mb-4">Add New Menu Item</h2>

<form method="post">
    <div class="mb-3">
        <label class="form-label">Name</label>
        <input type="text" name="Name" class="form-control" required />
    </div>

    <div class="mb-3">
        <label class="form-label">Price (€)</label>
        <input type="number" step="0.01" name="Price" class="form-control" required />
    </div>

    <div class="mb-3">
        <label class="form-label">Category</label>
        <select name="Category" class="form-select" required>
            <option value="">-- Select Category --</option>
            <option>Starter</option>
            <option>Main</option>
            <option>Dessert</option>
        </select>
    </div>

    <div class="mb-3">
        <label class="form-label">Menu Type</label>
        <select name="MenuType" class="form-select" required>
            <option value="">-- Select Menu Type --</option>
            <option>Lunch</option>
            <option>Dinner</option>
            <option>Drink</option>
        </select>
    </div>

    <div class="mb-3">
        <label class="form-label">Routing Target</label>
        <select name="RoutingTarget" class="form-select" required>
            <option value="">-- Select Routing --</option>
            <option>Kitchen</option>
            <option>Bar</option>
        </select>
    </div>

    <div class="mb-3">
        <label class="form-label">Quantity Available</label>
        <input type="number" name="QuantityAvailable" class="form-control" required />
    </div>

    <button type="submit" class="btn btn-success">Add Item</button>
    <a href="/Menu/ManageMenu" class="btn btn-secondary ms-2">Cancel</a>
</form> </div>
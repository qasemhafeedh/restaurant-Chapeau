@model List<restaurant_Chapeau.Models.RestaurantTable>

@{
    ViewData["Title"] = "Select a Table";
}

<h2 class="text-center mt-4"> Select a Table</h2>

<div class="d-flex flex-wrap justify-content-center gap-4 mt-5">
    @foreach (restaurant_Chapeau.Models.RestaurantTable table in Model)
    {
        <form asp-action="SelectTable" method="post" class="text-center">
            <input type="hidden" name="tableId" value="@table.TableID" />
            <button type="submit"
                    class="chair-button btn d-flex flex-column align-items-center justify-content-center
                           @(table.IsReserved ? "btn-outline-secondary disabled" : "btn-outline-success")"
            @(table.IsReserved ? "disabled" : "")>
              
                <div class="table-number">Table @table.TableNumber</div>
                <div class="StartTime">Start:  @table.ReservationStart</div>
                <div class="EndTime">End of reservation:  @table.ReservationEnd</div>
            </button>
        </form>
    }
</div>

@if (TempData["OrderStatus"] != null)
{
    <div class="alert alert-warning mt-4 text-center">
        @TempData["OrderStatus"]
    </div>
}

<style>
    .chair-button {
        width: 200px;
        height: 220px;
        padding: 10px;
        border: 2px solid #ccc;
        border-radius: 12px;
        transition: transform 0.2s ease;
    }

        .chair-button:hover:not(:disabled) {
            transform: scale(1.05);
            border-color: #28a745;
        }

    .emoji {
        font-size: 2rem;
    }

    .table-number {
        margin-top: 5px;
        font-size: 0.9rem;
        font-weight: 500;
    }
</style>

@model restaurant_Chapeau.ViewModels.CartViewModel

@{
    ViewData["Title"] = "Order Cart";
}

<div class="container mt-5 pt-5">
    <h2 class="mb-4">🛒 Order Cart</h2>

    @if (TempData["OrderStatus"] != null)
    {
        <div class="alert alert-info alert-dismissible fade show" role="alert">
            @TempData["OrderStatus"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (!Model.Items.Any())
    {
        <div class="alert alert-info">Your cart is currently empty.</div>
    }
    else
    {
        <form asp-action="SubmitOrder" method="post">
            <table class="table table-striped table-bordered align-middle">
                <thead class="table-light">
                    <tr>
                        <th>Item</th>
                        <th>Price</th>
                        <th>Quantity</th>
                        <th>Note</th>
                        <th>Remove</th>
                    </tr>
                </thead>
                <tbody>
                    @for (int i = 0; i < Model.Items.Count; i++)
                    {
                        var item = Model.Items[i];
                        <tr>
                            <td>@item.Name</td>
                            <td>€@item.Price.ToString("0.00")</td>
                            <td>
                                <input type="number"
                                       name="Items[@i].Quantity"
                                       value="@item.Quantity"
                                       class="form-control"
                                       min="1"
                                       required />

                                <input type="hidden" name="Items[@i].MenuItemID" value="@item.MenuItemID" />
                                <input type="hidden" name="Items[@i].Name" value="@item.Name" />
                                <input type="hidden" name="Items[@i].Price" value="@item.Price" />
                                <input type="hidden" name="Items[@i].RoutingTarget" value="@item.RoutingTarget" />
                            </td>
                            <td>
                                <input type="text"
                                       name="Items[@i].Note"
                                       value="@item.Note"
                                       class="form-control"
                                       placeholder="Optional note..." />
                            </td>
                            <td>
                                <!-- SEPARATE form: does NOT depend on table -->
                            <td>
                                <a asp-action="RemoveCartItem"
                                   asp-route-id="@item.MenuItemID"
                                   class="btn btn-sm btn-danger">
                                    ✖
                                </a>
                            </td>

                            </td>
                        </tr>
                    }

                </tbody>
            </table>

            <div class="mb-3">
                <label class="form-label fw-bold">Select a Table</label>
                <select name="SelectedTableID" class="form-select" required>
                    <option value="">-- Choose Table --</option>
                    @foreach (var table in Model.Tables)
                    {
                        var isReserved = table.ReservationStart <= DateTime.Now && table.ReservationEnd >= DateTime.Now;
                        if (!isReserved)
                        {
                            <option value="@table.TableID">Table @table.TableNumber</option>
                        }
                    }
                </select>
            </div>

            <div class="mb-3">
                <label class="form-label">Comment</label>
                <textarea name="Comment" class="form-control" rows="2">@Model.Comment</textarea>
            </div>

            <div class="mb-3">
                <label class="form-label">Tip (€)</label>
                <input type="number" name="TipAmount" class="form-control" step="0.01" min="0" value="@Model.TipAmount.ToString("0.00")" />
            </div>

            <div class="mb-3">
                <strong>Total: €@Model.Total.ToString("0.00")</strong>
            </div>

            <div class="d-flex justify-content-between">
                <button type="submit" class="btn btn-success">✅ Submit Order</button>
                <a asp-action="ClearCart" class="btn btn-outline-danger">🗑️ Clear Cart</a>
            </div>
        </form>
    }
</div>

@{
    ViewData["Title"] = "Financial Overview";
}

<div class="container mt-5 pt-5">
    <h2 class="mb-4">Financial Overview</h2>

    <form method="get" class="row g-3 mb-4">
        <div class="col-md-3">
            <label>Period</label>
            <select name="period" class="form-select">
                <option value="">-- Custom Range --</option>
                <option value="month">Last Month</option>
                <option value="quarter">Last Quarter</option>
                <option value="year">Last Year</option>
            </select>
        </div>

        <div class="col-md-3">
            <label>Start Date</label>
            <input type="date" name="start" class="form-control" />
        </div>

        <div class="col-md-3">
            <label>End Date</label>
            <input type="date" name="end" class="form-control" />
        </div>

        <div class="col-md-2 d-flex align-items-end">
            <button type="submit" class="btn btn-primary w-100">Show</button>
        </div>
    </form>

    <div class="card p-4 shadow-sm">
        <h5>Period: @ViewBag.StartDate to @ViewBag.EndDate</h5>
        <hr />
        <p><strong>Total Sales - Lunch:</strong> €@ViewBag.LunchSales</p>
        <p><strong>Total Sales - Dinner:</strong> €@ViewBag.DinnerSales</p>
        <p><strong>Total Sales - Drink:</strong> €@ViewBag.DrinkSales</p>
        <p><strong>Total Revenue:</strong> €@ViewBag.TotalRevenue</p>
        <p><strong>Total Tips:</strong> €@ViewBag.TotalTips</p>
    </div>
    <div class="card p-4 shadow-sm">
        <h5>Period: @ViewBag.StartDate to @ViewBag.EndDate</h5>
        <hr />
        <p><strong>Total Income - Lunch:</strong> €@ViewBag.LunchIncome</p>
        <p><strong>Total Income - Dinner:</strong> €@ViewBag.DinnerIncome</p>
        <p><strong>Total Income - Drink:</strong> €@ViewBag.DrinkIncome</p>
        <p><strong>Total Income:</strong> €@ViewBag.TotalIncome</p>
    </div>
</div>
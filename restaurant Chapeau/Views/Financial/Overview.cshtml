@{
    ViewData["Title"] = "Financial Overview";
}

<div class="container mt-5 pt-5">
    <h2 class="mb-4">Financial Overview</h2>

    <form method="get" class="row g-3 mb-4">
        <div class="col-md-3">
            <label>Period</label>
            <select name="period" class="form-select">
                <option value="">-- Custom Range --</option>
                <option value="month">Last Month</option>
                <option value="quarter">Last Quarter</option>
                <option value="year">Last Year</option>
            </select>
        </div>

        <div class="col-md-3">
            <label>Start Date</label>
            <input type="date" name="start" class="form-control" />
        </div>

        <div class="col-md-3">
            <label>End Date</label>
            <input type="date" name="end" class="form-control" />
        </div>

        <div class="col-md-2 d-flex align-items-end">
            <button type="submit" class="btn btn-primary w-100">Show</button>
        </div>
    </form>

    <div class="row">
        <div class="col-md-6">
            <div class="card p-4 shadow-sm mb-4">
                <h5 class="text-primary">Sales Summary</h5>
                <p class="text-muted">Period: @ViewBag.StartDate to @ViewBag.EndDate</p>
                <hr />
                <p><strong>Total Sales - Lunch:</strong> €@ViewBag.LunchSales.ToString("F2")</p>
                <p><strong>Total Sales - Dinner:</strong> €@ViewBag.DinnerSales.ToString("F2")</p>
                <p><strong>Total Sales - Drink:</strong> €@ViewBag.DrinkSales.ToString("F2")</p>
                <h4 class="text-success"><strong>Total Revenue:</strong> €@ViewBag.TotalRevenue.ToString("F2")</h4>
                <p><strong>Total Tips:</strong> €@ViewBag.TotalTips.ToString("F2")</p>
                <p><strong>Total VAT:</strong> €@ViewBag.TotalVAT.ToString("F2")</p>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card p-4 shadow-sm mb-4">
                <h5 class="text-success">Income Summary</h5>
                <p class="text-muted">Period: @ViewBag.StartDate to @ViewBag.EndDate</p>
                <hr />
                <p><strong>Net Income - Lunch:</strong> €@ViewBag.LunchIncome.ToString("F2")</p>
                <p><strong>Net Income - Dinner:</strong> €@ViewBag.DinnerIncome.ToString("F2")</p>
                <p><strong>Net Income - Drink:</strong> €@ViewBag.DrinkIncome.ToString("F2")</p>
                <h4 class="text-primary"><strong>Total Net Income:</strong> €@ViewBag.TotalIncome.ToString("F2")</h4>
                <small class="text-muted">* Net Income = Revenue - VAT</small>
            </div>
        </div>
    </div>
</div>
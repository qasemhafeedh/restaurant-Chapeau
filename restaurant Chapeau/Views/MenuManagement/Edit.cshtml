@model restaurant_Chapeau.Models.MenuItem

<h2>Edit Menu Item</h2>

<form method="post">
    <input type="hidden" name="MenuItemID" value="@Model.MenuItemID" />

    <div class="mb-3">
        <label>Name</label>
        <input type="text" name="Name" value="@Model.Name" class="form-control" />
    </div>

    <div class="mb-3">
        <label>Price (€)</label>
        <input type="number" name="Price" value="@Model.Price" step="0.01" class="form-control" />
    </div>

    <div class="mb-3">
        <label>Category</label>
        <input type="text" name="Category" value="@Model.Category" class="form-control" />
    </div>

    <div class="mb-3">
        <label>Quantity Available</label>
        <input type="number" name="QuantityAvailable" value="@Model.QuantityAvailable" class="form-control" />
    </div>

    <div class="mb-3">
        <label>Menu Type</label>
        <input type="text" name="MenuType" value="@Model.MenuType" class="form-control" />
    </div>

    <div class="mb-3">
        <label>Routing Target</label>
        <input type="text" name="RoutingTarget" value="@Model.RoutingTarget" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-controller="MenuManagement" asp-action="ManageMenu" class="btn btn-secondary">Cancel</a>
</form>

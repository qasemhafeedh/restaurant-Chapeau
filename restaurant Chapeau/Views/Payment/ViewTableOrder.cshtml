@model restaurant_Chapeau.Models.TableOrderView
@{
    ViewData["Title"] = $"Order for Table {Model.TableNumber}";
}

<div class="container mt-4">
    <h2 class="mb-3">🧾 Table @Model.TableNumber – Order Details</h2>

    @if (Model.Items != null && Model.Items.Any())
    {
        <table class="table table-striped table-bordered">
            <thead class="table-light">
                <tr>
                    <th>Item</th>
                    <th>Quantity</th>
                    <th>Total (€)</th>
                    <th>VAT (%)</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Items)
                {
                    <tr>
                        <td>@item.ItemName</td>
                        <td>@item.Quantity</td>
                        <td>€ @item.TotalPrice.ToString("0.00")</td>
                        <td>@item.VATRate %</td>
                    </tr>
                }
            </tbody>
        </table>

        <div class="mt-3">
            <p><strong>VAT (Low 9%):</strong> € @Model.TotalLowVAT.ToString("0.00")</p>
            <p><strong>VAT (High 21%):</strong> € @Model.TotalHighVAT.ToString("0.00")</p>
            <h4><strong>Total:</strong> € @Model.TotalAmount.ToString("0.00")</h4>
        </div>

        <div class="mt-4 d-flex gap-2">
            <a asp-action="FinishOrder" asp-route-tableId="@Model.TableID" class="btn btn-success">
                ✅ Finish Order
            </a>
            <a asp-action="SplitPayment" asp-route-tableId="@Model.TableID" class="btn btn-warning">
                🧮 Split Payment
            </a>
        </div>
    }
    else
    {
        <div class="alert alert-warning">⚠️ No order items found for this table.</div>
    }
</div>

@model List<restaurant_Chapeau.Models.RestaurantTable>
@{
    ViewData["Title"] = "Unpaid Tables";
}

<div class="container mt-5">
    <h2 class="mb-4">💰 Select a Table to View Order</h2>

    @if (TempData["Message"] != null)
    {
        <div class="alert alert-success">
            @TempData["Message"]
        </div>
    }

    @if (Model != null && Model.Any())
    {
        <div class="row">
            @foreach (var table in Model)
            {
                <div class="col-md-4 col-lg-3 mb-4">
                    <div class="card border-success shadow-sm h-100">
                        <div class="card-body text-center">
                            <h5 class="card-title">Table @table.TableNumber</h5>
                            <a asp-action="ViewTableOrder"
                               asp-route-tableId="@table.TableID"
                               class="btn btn-outline-success mt-2">
                                View Order
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="alert alert-info">
            ✅ All tables are settled. No unpaid orders found.
        </div>
    }
</div>
